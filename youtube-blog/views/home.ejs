<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/header") %>
    <title>Home</title>
</head>
<body>
    <%- include("./partials/nav") %>
    <div class="container mt-3" style="display: flex;">

    <% blogs.forEach(blog => { %>
    <div class="card" style="width: 18rem; margin:5px">
        <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="blogImg">
        <div class="card-body">
            <h5 class="card-title"><%= blog.title %></h5>
            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
        </div>
    </div>
    <% }) %>
    </div>

    <%- include("./partials/script") %>
</body>
</html>